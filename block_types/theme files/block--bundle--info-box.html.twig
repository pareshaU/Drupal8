{% set color = content.field_color['#items'].getValue() %}

{%
  set classes = [
    's3-' ~ color.0.value,
    's3-p-8',
    's3-m-8',
  ]
%}

{% set title %}
     {{ content.field_title }}
{% endset %}

{% set conBody %}
     {{ content.field_body }}
{% endset %}

<div {{ attributes.addClass(classes) }}>
  {% if title %}
    <h3 class="s3-m-t0">{{ title |striptags }}</h3>
  {% endif %}
  {% if conBody %}
    {{ conBody }}
  {% endif %}
</div>
